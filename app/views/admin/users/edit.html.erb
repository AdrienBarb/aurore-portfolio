<div class="form-wrapper">
  <div class="form">
    <h2>Modifie tes informations</h2>

    <%= form_for [:admin, @user] do |f| %>

      <%= f.text_field :first_name, placeholder: 'Prenom', class: 'form-field' %>

      <%= f.text_field :last_name, placeholder: 'Nom', class: 'form-field' %>

      <%= f.text_field :phone_number, placeholder: 'Numéro de téléphone', class: 'form-field' %>

      <%= f.text_field :title, placeholder: 'Titre', class: 'form-field' %>

      <%= f.text_field :description, placeholder: 'Profil description', class: 'form-field' %>

      <%= f.text_field :url_linkedin, placeholder: 'URL Linkedin', class: 'form-field' %>

      <%= f.text_field :url_instagram, placeholder: 'URL Instagram', class: 'form-field' %>

      <%= f.text_field :url_facebook, placeholder: 'URL Facebook', class: 'form-field' %>

      <%= f.text_field :works_description, placeholder: 'Works description', class: 'form-field' %>

      <%= f.label :photo %>
      <%= f.file_field :photo %>

      <%= f.submit "Valider", class: 'valid-button' %>
    <% end %>
  </div>
</div>

