    <header>
      <div class="about-wrapper" id="about">
        <div class="about-description">
          <h1><%= @user.first_name %> </br> <%= @user.last_name %></h1>
          <p> <%= @user.description %></p>
        </div>
        <%= cl_image_tag @user.photo.key %>
      </div>
    </header>

    <div class="works-wrapper" id="works">
      <div class="works-header">
        <h2>My Works</h2>
        <p> <%= @user.works_description %> </p>
      </div>



      <div class="works-pictures-container">

        <% if @user.projects.any? %>
          <% @user.projects.each_with_index do |project, index| %>
            <div class="work-image">
              <%= cl_image_tag project.image.key %>
              <div class="work-description">
                <h3>What did I do?</h3>
                <p><%= project.description %></p>
              </div>
            </div>
          <% end %>
        <% end %>

      </div>
    </div>

    <div class="contact-wrapper" id="contact">
      <h2>Contact:</h2>
      <p>Phone: <%= @user.phone_number %></p>
      <p>Email: <%= @user.email %></p>
      <div class="social-links">
        <a href="<%= @user.url_linkedin %>" target="_blank"><i class="fab fa-linkedin-in"></i></a>
        <a href="<%= @user.url_instagram %>" target="_blank"><i class="fab fa-instagram"></i></a>
      </div>
    </div>
