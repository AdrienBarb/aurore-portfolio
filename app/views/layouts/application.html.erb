<!DOCTYPE html>
<html>
  <head>
    <title>AurorePortfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body id="home">

    <div class="nav-bar-wrapper">
      <div class="nav-bar">
        <div class="nav-bar-left">
          <%= link_to 'Home', root_path  %>
          <a href="#about" id="anchor-link">About</a>
          <a href="#works" id="anchor-link" class="bebas">Portfolio</a>
          <a href="#contact" id="anchor-link">Contact</a>
        </div>
        <div class="nav-bar-right">
          <div class="phone-number">
            <p>Call me:</p>
            <p class="red-phone-number">+33 (0)6 18 01 86 34</p>
          </div>
          <span class="line"></span>
          <div class="icon">
            <a href="https://www.linkedin.com/in/aurore-demierre/" target="_blank"><i class="fab fa-linkedin-in"></i></a>
            <a href="mailto: aurore.demierre@gmail.com"><i class="fas fa-envelope"></i></a>
          </div>
        </div>
      </div>
    </div>

    <div id="layout">
      <%= yield %>
          <% flash.each do |key, message| %>
        <div class="alert alert-<%= key %>">
            <%= message %>
        </div>
      <% end %>
    </div>



  </body>
</html>
